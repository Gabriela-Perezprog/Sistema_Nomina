<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Buscar Empleado</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-5">
  <h3 class="text-primary text-center mb-4">Buscar Empleado</h3>

  <form method="GET" action="/buscar" class="mb-4 col-md-6 mx-auto d-flex">
    <input type="text" name="nombre" value="<%= query %>" class="form-control me-2" placeholder="Nombre del empleado...">
    <button class="btn btn-primary">Buscar</button>
  </form>

  <% if (resultados.length > 0) { %>
  <table class="table table-bordered text-center align-middle">
    <thead class="table-primary">
      <tr>
        <th>Nombre</th>
        <th>Puesto</th>
        <th>Departamento</th>
        <th>Salario</th>
      </tr>
    </thead>
    <tbody>
      <% resultados.forEach(e => { %>
      <tr>
        <td><%= e.nombre %></td>
        <td><%= e.puesto %></td>
        <td><%= e.departamento %></td>
        <td>$<%= e.salarioBase %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else if (query) { %>
  <div class="alert alert-warning text-center">No se encontraron empleados con ese nombre.</div>
  <% } %>

  <div class="text-center mt-4">
    <a href="/admin" class="btn btn-secondary">Volver al Men√∫</a>
  </div>
</div>

</body>
</html>
