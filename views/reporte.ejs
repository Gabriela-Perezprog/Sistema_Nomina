<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Reporte de NÃ³mina</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container py-5">
    <h3 class="text-center text-primary mb-4">Reporte de NÃ³mina</h3>

    <% if (empleados.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle">
          <thead class="table-primary">
            <tr>
              <th>Nombre</th>
              <th>Puesto</th>
              <th>Departamento</th>
              <th>Salario Base</th>
              <th>ISR</th>
              <th>IMSS</th>
              <th>Neto</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% empleados.forEach(e => { %>
            <tr>
              <td><%= e.nombre %></td>
              <td><%= e.puesto %></td>
              <td><%= e.departamento %></td>
              <td>$<%= e.salarioBase %></td>
              <td>$<%= e.isr %></td>
              <!-- ğŸ”§ IMSS ya no debe mostrar signo $ -->
              <td><%= e.imss %></td>
              <td>$<%= e.neto %></td>
              <td>
                <a href="/recibo/<%= encodeURIComponent(e.nombre) %>" 
                   class="btn btn-sm btn-outline-primary mb-1">ğŸ“„ PDF</a>
                <% if (rol === 'administrador') { %>
                  <a href="/editar/<%= encodeURIComponent(e.nombre) %>" 
                     class="btn btn-sm btn-outline-warning mb-1">âœï¸ Editar</a>
                  <a href="/eliminar/<%= encodeURIComponent(e.nombre) %>" 
                     class="btn btn-sm btn-outline-danger mb-1"
                     onclick="return confirm('Â¿Seguro que deseas eliminar a <%= e.nombre %>?');">ğŸ—‘ï¸ Eliminar</a>
                <% } %>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-warning text-center">
        No hay empleados registrados en el sistema.
      </div>
    <% } %>

    <div class="text-center mt-4 d-flex justify-content-center gap-2">
      <% if (rol === 'administrador') { %>
        <a href="/admin" class="btn btn-secondary">Volver al MenÃº</a>
        <a href="/registro" class="btn btn-primary">Registrar Nuevo</a>
      <% } else { %>
        <a href="/empleado" class="btn btn-secondary">Volver al MenÃº</a>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

